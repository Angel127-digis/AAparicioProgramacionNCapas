@{
    var error = ViewBag.Errores;
    //ML.ResultSQL result = error;
    //var InsertCorrecto = result.Resultados.Count - result.Incorrectos.Count;
}
@if (error == null || error == "")
{
    <div class="modal" tabindex="-1" role="dialog" id="Modal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Aviso</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <h2>Regsitros ingresados correctamente: @error[0]</h2>
                </div>
                <div class="modal-body">
                    <h2>Registros incorrectos: @error[1]</h2>
                </div>
                @for (int i = 2; i < @error.Count; i++)
                {
                    <div class="modal-body">
                        <h2>Los registros que se agregaron mal fueron, regustro: @error[i]</h2>
                    </div>
                }
                <div class="modal-footer">
                    @Html.ActionLink("Continuar", "GetAll", "Usuario", new { area = "" }, htmlAttributes: new { @class = "btn btn-danger" })
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="modal" tabindex="-1" role="dialog" id="Modal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Aviso</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <h2>@error</h2>
                </div>
                    <div class="modal-body">
                    </div>
                <div class="modal-footer">
                    @Html.ActionLink("Continuar", "GetAll", "Usuario", new { area = "" }, htmlAttributes: new { @class = "btn btn-danger" })
                </div>
            </div>
        </div>
    </div>
}
<script>
    $('#Modal').modal()
</script>
